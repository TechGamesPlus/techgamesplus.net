---
import { Image } from "astro:assets"
import type { ImageMetadata } from "astro";

interface Props {
    imageSrc: ImageMetadata;
    imageAlt: string;
    imageSide: "left" | "right";
}
const { imageSrc, imageAlt, imageSide } = Astro.props;
---

<section>
    <div class=`section-content ${imageSide}`>
        <div class="text-content">
            <slot />
        </div>
        <div class="image-content">
            <Image src={imageSrc} alt={imageAlt} />
        </div>
    </div>
</section>

<style>
    section {
        padding-top: 60px;
        background-color: var(--section-background-color);
    }
    .section-content {
        max-width: 1290px;
        margin: 0 auto;
        padding: 0 15px;
        width: 100%;
        display: flex;
        gap: 60px;
        
        .text-content {
            width: 100%;
            height: 100%;
        }

        .image-content {
            max-width: 615px;
            width: 100%;
            height: auto;
            display: flex;
            
            img {
                width: 100%;
                height: auto;
                object-fit: contain;
                border-radius: var(--border-radius);
            }
        }
    }
    .section-content.left {
        flex-direction: row-reverse;
        .text-content {
            align-items: flex-end;
        }
    }
    .section-content.right {
        flex-direction: row;
        .text-content {
            text-align: left;
            align-items: flex-start;
        }
    }

    @media only screen and (max-width: 1000px) {
        .section-content.right, .section-content.left {
            flex-direction: column-reverse;
            gap: 20px;
            .text-content {
                max-width: 100%;
                text-align: left;
            }
            .image-content {
                width: 100%;
                max-width: 100%;
                max-height: 50%;
                height: auto;
            }
        }
    }
</style>
