---
import { Image } from "astro:assets";
import Base from "@layouts/Base.astro";
import Kickoff from "@components/Kickoff.astro";
import TextImageSection from "@components/TextImageSection.astro";
import Button from "@components/Button.astro";

import kickoff_image from "@images/kickoff-feb26.jpg"
import airCS_image from "@images/AirCS.png"
import ta5a_image from "@images/TA5A_Home.png"
import logoImage from "@images/logo.png"
import geroPhoto from "@images/geraldton_feature.jpg"
---

<Base title="City of Greater Geraldton" description="The kickoff page for my political endeavours for the City of Greater Geraldton">
	<Kickoff contentAlign="left" backgroundImage={kickoff_image} backgroundAlt="A photo of a coastline" mobileBackgroundOffset={-800}>
		<h1>Welcome!</h1>
		<h2>My name is Ethan Dahlberg :)</h2>
		<p>
			I am a lifelong resident of the City of Greater Geraldton<br/>
			with visions for the future of our city and state.<br/>
			<br/>
			I also do personal technological activities as well, including<br/>
			gaming and other video content in my spare time.<br/>
			<br/>
			(and if you know me as TGP, then "Hi! It's me: TGP!")
		</p>
		<Image src={logoImage} alt="TGP Logo" width="300" loading="eager"/>
	</Kickoff>
	<TextImageSection
		imageSide="right"
		imageSrc={geroPhoto}
		imageAlt="A photo of a Cathedral on a cloudy day."
	>
		<h2>City of Greater Geraldton</h2>
		<p>
			These pages follow my political endeavours for the City of Greater Geraldton in Western Australia
		</p>
		<Button href="cgg">View Here</Button>
	</TextImageSection>
	<TextImageSection
		imageSide="left"
		imageSrc={ta5a_image}
		imageAlt="A hand drawn building."
	>
		<h2>The Awakening: 5th Anniversary</h2>
		<p>
			My Visual Novel game to celebrate the fifth anniversary of The Awakening (2020)
		</p>
		<Button href="/projects/the-awakening-5th-anniversary">View Here</Button>
	</TextImageSection>
	<TextImageSection
		imageSide="right"
		imageSrc={airCS_image}
		imageAlt="Train station made in Minecraft."
	>
		<h2>AirCS Race 2025</h2>
		<p>
			My POV Timelapse on the AirCS Race 2025 is available for viewing
		</p>
		<Button href="https://youtu.be/PUR4POmtYmg" target="_blank">View Here</Button>
	</TextImageSection>
</Base>